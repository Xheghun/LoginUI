<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:colorBackground">#ffffff</item>
    </style>


    <style name="button_bg" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_bg</item>
    </style>


    <!--Login One -->
    <style name="Login_1_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="editTextColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/segoe_ui_italic</item>
    </style>

    <style name="text_fields">
        <item name="android:fontFamily">@font/segoe_ui_italic</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="text_btn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/segoe_ui_italic</item>
    </style>
</resources>
